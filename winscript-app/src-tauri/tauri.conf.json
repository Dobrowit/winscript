{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "WinScript",
  "version": "1.0.9",
  "identifier": "flick.winscript.dev",
  "build": {
    "devUrl": "http://localhost:5173/src/",
    "frontendDist": "../dist/",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "WinScript",
        "width": 1200,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 776,
        "resizable": true,
        "center": true,
        "shadow": false,
        "transparent": true,
        "fullscreen": false
      }

    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "windows": {
      "nsis": {
        "installerIcon": "icons/favicon.ico",
        "sidebarImage": "icons/sidebar.bmp",
        "installMode": "both"
      }
    },
    "targets": "all",
    "icon": [
      "icons/favicon.ico"
    ]
  }
}
